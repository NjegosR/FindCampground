
<% include ../partials/header %>
    <div class="container">
        <div class="myForm">
            <h1 style="margin-bottom: 25px;">Create a New Campground</h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name...">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Link for image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description...">
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary" style="margin-top:25px;">Add New</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>
