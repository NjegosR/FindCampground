
<% include ../partials/header %>
<div class="container">
    <div class="myForm">
        <h1 style="margin-bottom: 25px;">Add New Comment to <%=campground.name%></h1>
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Comment...">
            </div>
            <div class="form-group">
                <button type="submit" class="form-control btn btn-primary" style="margin-top:25px;">Add New Comment</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>
